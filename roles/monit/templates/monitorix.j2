# {{ ansible_managed }}

# Surveillance du soft monitorix
check process Monitorix with pidfile /run/monitorix.pid

start program = "/usr/bin/systemctl start monitorix"
stop  program = "/usr/bin/systemctl stop monitorix"
restart  program = "/usr/bin/systemctl restart monitorix"

# Alerte
if 5 restarts within 5 cycles then timeout

# Ajout du soft dans un groupe
group monitoring
