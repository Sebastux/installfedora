# {{ ansible_managed }}

# Surveillance du fichier de config du deamon clamd
check file clamd.conf with path /etc/clamd.conf

# Surveillance des permissions
if failed permission 644 then unmonitor
if failed uid root then unmonitor
if failed gid root then unmonitor

# Hash du fichier
if failed checksum and expect the {{ clamd.stat.checksum }}
then alert

# Envoie dâ€™une alerte si la somme SHA1 du fichier change
if changed sha1 checksum then stop

# Ajout dans un groupe
group fichierconfig
