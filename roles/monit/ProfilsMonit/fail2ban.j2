# {{ ansible_managed }}

# Surveillance du service fail2ban
check process fail2ban with pidfile /var/run/fail2ban/fail2ban.pid

# Gestion du daemon
start program  "/usr/bin/systemctl start fail2ban"
stop program  "/usr/bin/systemctl stop fail2ban"
restart program  "/usr/bin/systemctl restart fail2ban"

# Conditions de surveillance
if 5 restarts within 5 cycles then timeout

# Ajout du soft dans un groupe
group outils
